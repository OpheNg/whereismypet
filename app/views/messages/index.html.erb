<h1>Messages#index</h1>
<p>Find me in app/views/messages/index.html.erb</p>

<h3>Ma conversation avec <%= @friend.firstname %></h3>
  <% @messages.each do |message| %>
    <ul>
      <li><p><%= message.sender.firstname %> dit : <%= message.content %></p></li>
    </ul>
  <% end %>


  <%= simple_form_for [@friend, @message] do |f| %>
  <%= f.input :content %>
  <%= f.submit "Send message", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to conversations', conversations_path %>



