
    <div class="pet-infos">
      <ul>
        <li><%= @pet.status %></li>
        <li> <%= @pet.event_date %> </li>
        <li><%= @pet.name %></li>
        <li><%= @pet.specie %></li>
        <li><%= @pet.breed %></li>
        <li><%= @pet.color %></li>
        <li><%= @pet.age %></li>
        <li><%= @pet.address %></li>
        <li><%= @pet.email %></li>
        <li><%= @pet.tel %></li>
        <li><%= @pet.details %></li>
      </ul>
      <% if @pet.user_id == current_user.id %>
